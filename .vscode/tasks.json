{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build philosophers",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-pthread",
                "${file}",
                "${fileDirname}/actions.c",
                "${fileDirname}/forks.c",
                "${fileDirname}/getters.c",
                "${fileDirname}/handlers.c",
                "${fileDirname}/init.c",
                "${fileDirname}/iterator.c",
                "${fileDirname}/philosopher.c",
                "${fileDirname}/print.c",
                "${fileDirname}/time.c",
                "${fileDirname}/utils.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}